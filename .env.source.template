# =============================================================================
# ATBench AI - Environment Configuration (Source Build)
# =============================================================================
# For use with docker-compose.source.yml (builds from source repos)
# Copy to .env and fill in your values:
#   cp .env.source.template .env
# =============================================================================

# ==== FLASK ====
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this

# ==== GUNICORN ====
WORKERS=4
THREADS=2
TIMEOUT=300
INTERVIEW_WORKERS=2
INTERVIEW_THREADS=2
INTERVIEW_TIMEOUT=300

# ==== FILE UPLOAD ====
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# ==== QDRANT ====
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=resumes
QDRANT_OLLAMA_COLLECTION_NAME=ollama_resumes
QDRANT_INTERVIEW_PREPARE_COLLECTION=interview_prepare
QDRANT_INTERVIEW_RESULTS_COLLECTION=interview_results
QDRANT_USE_HTTPS=false

# ==== OLLAMA CLOUD ====
OLLAMA_HOST=https://api.ollama.cloud
OLLAMA_API_KEY=your-ollama-cloud-api-key
OLLAMA_MODEL=deepseek-v3.1:671b-cloud
OLLAMA_TECHNICAL_MODEL=qwen3-coder:480b-cloud
OLLAMA_EXTRACTION_MODEL=deepseek-v3.1:671b-cloud
OLLAMA_COMPLEX_MODEL=kimi-k2:1t-cloud
OLLAMA_FALLBACK_MODEL=qwen3-coder:480b-cloud
OLLAMA_TIMEOUT=120
OLLAMA_VERIFY_SSL=false
OLLAMA_MAX_CONCURRENT_REQUESTS=3
OLLAMA_QUEUE_TIMEOUT=300
USE_LLM_EXTRACTION=true

# ==== OPENAI (Whisper STT) ====
OPENAI_API_KEY=sk-your-openai-api-key
WHISPER_MODEL=whisper-1

# ==== GOOGLE GEMINI ====
GOOGLE_API_KEY=your-google-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# ==== AWS S3 ====
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=atbench-resumes
S3_GENERATED_RESUMES_FOLDER=Generated-Resumes
S3_INTERVIEW_FOLDER=Interview Recordings

# ==== REDIS ====
REDIS_PASSWORD=atbench-redis-password

# ==== RATE LIMITING ====
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_UPLOAD=20 per hour
RATELIMIT_SEARCH=60 per hour
RATELIMIT_OLLAMA=10 per hour
RATELIMIT_ENHANCE=5 per hour
RATELIMIT_INTERVIEW=20 per hour

# ==== EMBEDDINGS ====
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ==== TTS ====
TTS_VOICE=en-IN-NeerjaNeural
TTS_VOICE_MALE=en-IN-PrabhatNeural

# ==== INTERVIEW ====
DEFAULT_QUESTION_COUNT=12
DEFAULT_TIME_PER_QUESTION=120
MAX_RECORDING_DURATION=600

# ==== CORS ====
CORS_ORIGINS=http://localhost:5001,http://localhost:3000,https://atbench.com

# ==== LOGGING ====
LOG_LEVEL=INFO
